pipeline {
    agent any
    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        //NPM_CONFIG_CACHE = "${WORKSPACE}/.npm" // So files written are done so where the jenkins user has access.
    }

    stages {

        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    npm install terraform
                    ls
                    cd node_modules/terraform/bin
                    ./terraform --version
                '''
            }
        }
    }
}

